@model WebApplication1.Models.BookImage

@{
    ViewData["Title"] = "Добавление изображения";
}

<h1>Добавление обложки книги</h1>
<form asp-action="AddBookImg" asp-controller="Database" enctype="multipart/form-data">
    <div>
        <div class="form-group">
            <label asp-for="BookId"></label>
            <input type="number" asp-for="BookId" readonly="readonly" value="@ViewData["BookId"]" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="BookImg"></label>
            <input type="file" asp-for="BookImg" class="form-control">
        </div>
        <div>
            <input type="submit" value="Загрузить" class="btn btn-outline-secondary">
        </div>
    </div>
</form>

@if (ViewData.ContainsKey("Message"))
{
    <h4>@ViewData["Message"]</h4>
}
