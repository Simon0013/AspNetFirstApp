@model WebApplication1.Models.Comment

@{
    ViewData["Title"] = "Добавление комментария";
}

<h1>Новый комментарий</h1>
<p align="justify">Уважаемый посетитель! <br>Для создания комментария в дискуссии заполните следующую форму и нажимите "Добавить"</p>

<form asp-controller="Database" asp-action="AddComment">
    <div>
        <div class="form-group">
            <label asp-for="Body"></label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="DiscussId"></label>
            <input type="number" asp-for="DiscussId" value="@ViewData["DiscussId"]" readonly="readonly" class="form-control">
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-outline-secondary">
        </div>
    </div>
</form>

@if (ViewData.Keys.Contains("Message"))
{
    <h4 style="color: red">@ViewData["Message"]</h4>
}
