@model WebApplication1.Models.User

@{
    ViewData["Title"] = "Удаление учётной записи пользователя";
}

<h1>Удаление учётной записи пользователя</h1>
<p align="justify">Для удаления своей учётной записи введите свой e-mail и пароль и нажмите "Удалить"</p>
<form asp-controller="Database" asp-action="DelAccount">
    <div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Удалить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

@if (ViewData.ContainsKey("Message"))
    {
        <h4 style="color: red">@ViewData["Message"]</h4>
    }
